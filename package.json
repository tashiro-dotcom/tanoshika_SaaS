{
  "name": "a-gata-support-management",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/api & npm run dev -w apps/web",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "test": "npm run test -ws",
    "lint": "npm run lint -ws",
    "state:snapshot": "ts-node scripts/state/snapshot.ts",
    "state:restore": "ts-node scripts/state/restore.ts"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  }
}
